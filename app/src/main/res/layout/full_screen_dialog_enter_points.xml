<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_dialog_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="@string/intuition_points"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bt_info_dialog_enter"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_information" />

        <ImageView
            android:id="@+id/bt_arrow_back_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_enter_points"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_date_enter_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="August 22, 2023"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_flag_home_enter_point"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_enter_point"
            app:srcCompat="@drawable/manchester" />

        <ImageView
            android:id="@+id/ic_flag_away_enter_point"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_enter_point"
            app:srcCompat="@drawable/manchester" />

        <EditText
            android:id="@+id/et_enter_point_home"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_result_match"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="40dp"
            android:hint="0"
            android:paddingStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/ic_flag_home_enter_point"
            app:layout_constraintStart_toEndOf="@+id/ic_flag_home_enter_point"
            app:layout_constraintTop_toTopOf="@+id/ic_flag_home_enter_point" />

        <EditText
            android:id="@+id/et_enter_point_away"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_result_match"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="40dp"
            android:hint="0"
            android:paddingStart="12dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/ic_flag_away_enter_point"
            app:layout_constraintEnd_toStartOf="@+id/ic_flag_away_enter_point"
            app:layout_constraintTop_toTopOf="@+id/ic_flag_away_enter_point" />

        <TextView
            android:id="@+id/tv_dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:fontFamily="@font/source_sans_pro_semibold"
            app:layout_constraintBottom_toBottomOf="@+id/et_enter_point_away"
            app:layout_constraintEnd_toStartOf="@+id/et_enter_point_away"
            app:layout_constraintStart_toEndOf="@+id/et_enter_point_home"
            app:layout_constraintTop_toTopOf="@+id/et_enter_point_home" />

        <TextView
            android:id="@+id/tv_name_home_point_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Man United"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/et_enter_point_home"
            app:layout_constraintStart_toStartOf="@+id/ic_flag_home_enter_point"
            app:layout_constraintTop_toBottomOf="@+id/ic_flag_home_enter_point" />

        <TextView
            android:id="@+id/tv_name_away_point_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Man United"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_enter_point_away"
            app:layout_constraintTop_toBottomOf="@+id/ic_flag_away_enter_point" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bt_history"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/et_enter_point_home"
            app:layout_constraintStart_toStartOf="@+id/ic_flag_home_enter_point"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_home_point_enter">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go History"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/source_sans_pro_semibold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bt_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_bt_enter_point"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ic_flag_away_enter_point"
            app:layout_constraintStart_toStartOf="@+id/et_enter_point_away"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_away_point_enter">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>